generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Run {
  id          String   @id @default(cuid())
  configHash  String
  startedAt   DateTime @default(now())
  finishedAt  DateTime?
  latencyMs   Float?
  costUsd     Float?
  bertScore   Float?
  semantic    Float?
  resultJson  Json?
}