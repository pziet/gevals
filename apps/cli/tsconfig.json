{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "target": "ES2020",
    "module": "Node16",
    "moduleResolution": "Node16",
    "outDir": "dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "@gevals/core": ["../../packages/core/src/index.ts"],
      "@gevals/core/*": ["../../packages/core/src/*"]
    }
  },
  "references": [
    { "path": "../../packages/core" }
  ],
  "include": ["src"]
}
