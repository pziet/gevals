{
  "name": "gevals",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "check-types": "turbo run check-types",
    "worker:dev": "turbo run dev --filter=@gevals/worker",
    "worker:start": "turbo run start --filter=@gevals/worker"
  },
  "devDependencies": {
    "@types/fluent-ffmpeg": "^2.1.27",
    "@types/jest": "^29.5.14",
    "jest": "^29.7.0",
    "prettier": "^3.5.3",
    "ts-jest": "^29.3.2",
    "turbo": "^2.5.3",
    "typescript": "5.8.2"
  },
  "packageManager": "pnpm@9.0.0",
  "engines": {
    "node": ">=18"
  },
  "dependencies": {
    "@prisma/client": "^6.7.0",
    "commander": "^13.1.0",
    "dotenv": "^16.5.0",
    "execa": "^9.5.2",
    "fast-glob": "^3.3.3",
    "fluent-ffmpeg": "^2.1.3",
    "openai": "^4.97.0",
    "prisma": "^6.7.0",
    "tmp": "^0.2.3",
    "tsx": "^4.19.4"
  }
}
